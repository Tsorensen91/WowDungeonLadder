<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:ignore="ExtraText">



        //dungeon info
        <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                android:layout_marginRight="30dp" android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvDungeonName"
                android:text="@string/_20"
                android:textSize="20sp"
        />
        <TextView
                android:id="@+id/tvDungeonName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Temple of Sethraliss"
                android:textSize="20sp"
                android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
                android:textAlignment="center"
                />
        <TextView
                android:id="@+id/tvRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/_20"
                android:textSize="40sp"

        />

        //dungeon modifiers
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tyrannical"
                android:id="@+id/affix1"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toStartOf="@id/affix2"
                android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/skittish"
                android:id="@+id/affix2"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toStartOf="@id/affix3"
                android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/skittish"
                android:id="@+id/affix3"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toStartOf="@id/affix4"
                android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/reaping"
                android:id="@+id/affix4"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty"
                app:layout_constraintEnd_toStartOf="@id/class1"
                android:layout_marginRight="4dp" android:layout_marginEnd="50dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
                />

        //character classes
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/class_deathknight"
                android:id="@+id/class1"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toStartOf="@id/class2"
                android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/class_deathknight"
                android:id="@+id/class2"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toStartOf="@id/class3"
                android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/class_deathknight"
                android:id="@+id/class3"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toStartOf="@id/class4"
                android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/class_deathknight"
                android:id="@+id/class4"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toStartOf="@id/class5"
                android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:contentDescription="@string/dungeon_modifier"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/class_deathknight"
                android:id="@+id/class5"
                app:layout_constraintTop_toBottomOf="@id/tvDifficulty" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
                android:layout_marginRight="24dp" android:layout_marginEnd="45dp"
                android:contentDescription="@string/dungeon_modifier"
                />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>