<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchFragment">

    <TextView
            android:text="@string/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/Region"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/regionSpinner" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Region"/>

    <TextView
            android:text="@string/dungeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Dungeon" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/regionSpinner" />
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/dungeonSpinner" app:layout_constraintTop_toBottomOf="@id/Dungeon" android:layout_marginTop="8dp"/>

    <TextView
            android:text="@string/fortified_tyrannical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Affix" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/dungeonSpinner"
    />
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/affixSpinner" app:layout_constraintTop_toBottomOf="@id/Affix" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/affixSpinner" android:layout_marginTop="40dp"
            android:id="@+id/searchButton"/>
</android.support.constraint.ConstraintLayout>